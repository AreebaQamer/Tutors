@model List<CartItem>

<style>
    body {
        background-image: url('/images/sum.png');
        background-repeat: no-repeat;
        background-size: cover;
    }

    table {
        width: 90%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:not(:last-child) {
        border-bottom: 1px solid black;
    }

    h2 {
        text-align: center;
        margin-top: 70px;
        font-size: 40px;
        font-family: bolder;
        font-weight: 40px;
        color: darkblue;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
        font-size: 30px;
    }

    img {
        width: 150px; /* Adjust the width to make the image bigger */
    }



    .checkout-button {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .checkout-button button {
            background-color: darkred;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
        }

            .checkout-button button:hover {
                background-color: #0056b3;
            }
</style>

<br />
<br />
<div class="container-fluid">
    <h2>Your Cart</h2>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Price</th>
                    <th>Quantity</th>

                    <th>Images</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CourseId</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td><img src="~/UploadFiles/@item.Image" alt="Product Image" width="50" /></td>


                        <td>
                            <form method="post" action="@Url.Action("DeleteCart", "AddToCart")">
                                <input type="hidden" name="deleteItemId" value="@item.CourseId" />
                                <button type="submit" class="btn btn-danger btn-custom">Delete</button>
                            </form>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
        <div class="checkout-button">
            <button onclick="location.href='@Url.Action("Checkout", "AddToCart")'">Checkout</button>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
    }
</div>

