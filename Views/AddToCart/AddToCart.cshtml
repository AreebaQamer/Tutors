@model List<CartItem>

<style>
    table {
        width: 90%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:not(:last-child) {
        border-bottom: 1px solid black;
    }

    h2 {
        text-align: center;
        margin-top: 70px;
        font-size: 40px;
        font-family: cursive;
        color: #007BFF;
        text-decoration: underline;
    }

    h3 {
        text-align: center;
        margin-top: 20px;
        font-size: 30px;
    }

    img {
        width: 150px;
    }

    .checkout-summary {
        text-align: center;
        margin-top: 20px;
    }

    .checkout-button {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .checkout-button button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
        }

            .checkout-button button:hover {
                background-color: #0056b3;
            }
</style>

<div class="container-fluid">
    <h2>Order Summary</h2>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CourseId</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalPrice</td>
                        <td><img src="~/UploadFiles/@item.Image" alt="Product Image" width="50" /></td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="checkout-summary">
            <h3>Total Amount: @ViewBag.TotalAmount.ToString("C")</h3>
        </div>
        <div class="checkout-button">
            <form action="/Cart/ConfirmOrder" method="post">
                <button type="submit">Proceed to Payment</button>
            </form>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
    }
</div>
